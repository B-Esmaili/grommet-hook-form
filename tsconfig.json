{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "commonjs",               
    "jsx": "react-jsx",                 
    "declaration": true,                
    "outDir": "lib",                    
    "isolatedModules": true,            
    "strict": true,                     
    "noUnusedLocals": true,             
    "noUnusedParameters": true,         
    "noImplicitReturns": true,          
    "moduleResolution": "node",         
    "baseUrl": "src",                 
    "paths": {
      "styled-hook-form": ["./"],
      "gromet-hook-form/extensions": ["components/extensions"]
    }, 
    "allowSyntheticDefaultImports": true,     
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
